{
  "name": "twitch-midi",
  "version": "3.0.0",
  "description": "A Twitch bot that allows viewers to control your MIDI setup",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": "dist/index.cjs",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 0",
    "build": "tsc",
    "lint": "eslint -c eslint.config.mjs src/**/*.ts",
    "format": "eslint --fix -c eslint.config.mjs src/{,**/}*.ts",
    "watch-build": "tsc -w",
    "serve": "npm run build && npm run start",
    "start": "node ./lib/index.js",
    "clean": "del-cli dist package",
    "esbuild": "esbuild lib/index.js --bundle --format=cjs --platform=node --target=node20 --external:jazz-midi --outfile=dist/index.cjs --minify",
    "package": "pkg . -o package/TwitchMIDI",
    "prezip": "cpy assets/* package && cpy package.json package",
    "zip": "cd package && bestzip ../TwitchMIDI.zip *",
    "bundle": "npm run clean && npm run build && npm run esbuild && npm run package && npm run zip"
  },
  "keywords": [
    "midi",
    "twitch",
    "chatbot",
    "jzz"
  ],
  "author": "rafaelpernil2",
  "license": "ISC",
  "dependencies": {
    "@twurple/api": "7.2.0",
    "@twurple/auth": "7.2.0",
    "@twurple/chat": "7.2.0",
    "@twurple/pubsub": "7.2.0",
    "chalk": "4.1.2",
    "dotenv": "16.4.5",
    "harmonics": "1.1.0",
    "i18next": "23.16.4",
    "jzz": "1.8.6",
    "nanotimer": "0.3.15"
  },
  "pkg": {
    "assets": [
      "./node_modules/jazz-midi"
    ],
    "targets": [
      "node20-windows-x64",
      "node20-linux-x64",
      "node20-macos-x64"
    ]
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.13.0",
    "@types/nanotimer": "0.3.2",
    "@types/node": "22.8.5",
    "@typescript-eslint/eslint-plugin": "8.12.2",
    "@typescript-eslint/parser": "8.12.2",
    "@yao-pkg/pkg": "6.0.0",
    "bestzip": "2.2.1",
    "cpy-cli": "5.0.0",
    "del-cli": "6.0.0",
    "esbuild": "0.24.0",
    "eslint": "9.13.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "globals": "^15.11.0",
    "prettier": "3.3.3",
    "typescript": "5.6.3"
  },
  "prettier": {
    "printWidth": 180,
    "trailingComma": "none",
    "singleQuote": true,
    "tabWidth": 4,
    "endOfLine": "auto"
  }
}
